# Production Environment Configuration for LivroLog
# Copy this file to /var/www/livrolog/shared/.env and fill in the values

APP_NAME=LivroLog
APP_ENV=production
APP_DEBUG=false
# Generate with: docker run --rm ghcr.io/arnonrdp/livrolog-api:prod php artisan key:generate --show
APP_KEY=base64:REPLACE_WITH_GENERATED_KEY
APP_URL=https://api.livrolog.com
APP_FRONTEND_URL=https://livrolog.com

# Database Configuration (MariaDB on host)
DB_CONNECTION=mysql
DB_HOST=localhost
DB_PORT=3306
DB_DATABASE=livrolog
DB_USERNAME=root
DB_PASSWORD=YOUR_DB_PASSWORD_HERE

# Redis Cache (on host)
REDIS_HOST=127.0.0.1
REDIS_PORT=6379
REDIS_PASSWORD=null

# Mail Configuration
MAIL_MAILER=ses
MAIL_FROM_ADDRESS=noreply@livrolog.com
MAIL_FROM_NAME=LivroLog

# AWS SES (if using)
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_DEFAULT_REGION=us-east-1
AWS_SES_REGION=us-east-1

# Session & Cache
SESSION_DRIVER=file
CACHE_DRIVER=file
QUEUE_CONNECTION=database

# Logging
LOG_CHANNEL=daily
LOG_LEVEL=error

# Google Books API (recommended)
GOOGLE_BOOKS_API_KEY=

# Google OAuth (optional)
GOOGLE_CLIENT_ID=
GOOGLE_CLIENT_SECRET=

# Amazon Integration (optional)
AMAZON_PA_API_ENABLED=false
AMAZON_SITESTRIPE_ENABLED=true
OPEN_LIBRARY_ENABLED=true