# Application Configuration
APP_DEBUG=true
APP_ENV=local
APP_FAKER_LOCALE=en
APP_FALLBACK_LOCALE=en
APP_FRONTEND_URL=http://localhost:8001
APP_KEY=
APP_LOCALE=en
APP_MAINTENANCE_DRIVER=file
# APP_MAINTENANCE_STORE=database
APP_NAME=LivroLog
APP_URL=http://localhost:8000

# Amazon Product Advertising API Configuration
AMAZON_PA_API_ENABLED=false
AMAZON_ASSOCIATE_TAG=livrolog01-20
AMAZON_PA_API_KEY=
AMAZON_PA_SECRET_KEY=
AMAZON_SITESTRIPE_ENABLED=true

# Resend Configuration (Email)
RESEND_KEY=

# Database Configuration
DB_CONNECTION=mysql
DB_DATABASE=livrolog
DB_HOST=mysql
DB_PASSWORD=
DB_PORT=3306
DB_USERNAME=

# Google Services Configuration
GOOGLE_BOOKS_API_KEY=
GOOGLE_CLIENT_ID=
GOOGLE_CLIENT_SECRET=
GOOGLE_REDIRECT_URI=http://localhost:8000/auth/google/callback

# Logging Configuration
LOG_CHANNEL=stack
LOG_DEPRECATIONS_CHANNEL=null
LOG_LEVEL=debug
LOG_STACK=single

# Mail Configuration
# For production, use: MAIL_MAILER=resend
MAIL_MAILER=smtp
MAIL_FROM_ADDRESS="noreply@livrolog.com"
MAIL_FROM_NAME="${APP_NAME}"
# SMTP settings (development with mailpit)
MAIL_HOST=mailpit
MAIL_PORT=1025
MAIL_USERNAME=null
MAIL_PASSWORD=null
MAIL_SCHEME=null

# Redis Configuration
REDIS_CLIENT=phpredis
REDIS_HOST=redis
REDIS_PASSWORD=null
REDIS_PORT=6379

# Session Configuration
SESSION_DOMAIN=null
SESSION_DRIVER=redis
SESSION_ENCRYPT=true
SESSION_LIFETIME=120
SESSION_PATH=/

# Other Services
BCRYPT_ROUNDS=12
BROADCAST_CONNECTION=reverb
# CACHE_PREFIX=
CACHE_STORE=database
FILESYSTEM_DISK=local
MEMCACHED_HOST=127.0.0.1
PHP_CLI_SERVER_WORKERS=4
QUEUE_CONNECTION=database
VITE_APP_NAME="${APP_NAME}"

# Reverb WebSocket Configuration
REVERB_APP_ID=livrolog
REVERB_APP_KEY=livrolog-key
REVERB_APP_SECRET=livrolog-secret
REVERB_HOST="reverb"
REVERB_PORT=8080
REVERB_SCHEME=http

VITE_REVERB_APP_KEY="${REVERB_APP_KEY}"
VITE_REVERB_HOST="localhost"
VITE_REVERB_PORT="${REVERB_PORT}"
VITE_REVERB_SCHEME="${REVERB_SCHEME}"
